                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.PublishingDate)
                            </td>
                            <td>
                               
                                @Html.ActionLink("View Artcle", "Details", new { id = item.ID }) 
                                
                            </td>
                        </tr>
                    }

                </table>
            }
        }


